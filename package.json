  },
  "repository": {
    "type": "git",
    "url": "https://github.com/softerist/heuristic-mcp"
  },
  "homepage": "https://github.com/softerist/heuristic-mcp#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.2",
